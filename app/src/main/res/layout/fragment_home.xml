<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
>

    <TextView
        android:id="@+id/greeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selamat Malam, Ikhwan Hanip pridauz"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textColor="#777777"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/logoBni"
        android:layout_width="200dp"
        android:layout_height="115dp"
        android:src="@drawable/bni"
        app:layout_constraintTop_toBottomOf="@id/greeting"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/txtSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saldo"
        android:textSize="15sp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/logoBni"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/garis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        app:layout_constraintTop_toBottomOf="@id/txtSaldo"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/garis_orange" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/garis_black" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSetor"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="15dp"
        app:layout_constraintTop_toBottomOf="@id/logoBni"
        app:layout_constraintStart_toStartOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/namaCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IKHWAN HANIF FRIDAUZ"
                android:textColor="#252525"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/iconCopy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_content_copy_24"
                android:layout_marginStart="250dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintLeft_toRightOf="@id/namaCard"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/inpo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BNI Taplus Muda | 7263-2938-2390-****"
                android:textSize="9sp"
                app:layout_constraintTop_toBottomOf="@id/namaCard"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/iconDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/baseline_keyboard_arrow_down_24"
                app:layout_constraintLeft_toRightOf="@+id/inpo"
                app:layout_constraintTop_toTopOf="@id/namaCard" />

            <TextView
                android:id="@+id/rp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp ********"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/inpo"
                android:textStyle="bold"
                android:textSize="20dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/closedEye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/baseline_visibility_off_24"
                app:layout_constraintLeft_toRightOf="@id/rp"
                app:layout_constraintTop_toBottomOf="@+id/inpo" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTarikTunai"
                android:layout_width="110dp"
                android:layout_height="38dp"
                android:background="@drawable/orange_button"
                android:text="Tarik Tunai"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/rp"
                tools:ignore="MissingConstraints" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSetorTunai"
                android:layout_width="110dp"
                android:layout_height="38dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/orange_button"
                android:text="Setor Tunai"
                app:layout_constraintStart_toEndOf="@+id/btnTarikTunai"
                android:textColor="@color/white"
                app:layout_constraintLeft_toRightOf="@id/btnSetorTunai"
                app:layout_constraintTop_toBottomOf="@+id/rp"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/shortcut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Shortcut Kamu"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/cardSetor"
        tools:layout_editor_absoluteX="35dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
